{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "lint": "eslint .",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.3",
    "@neondatabase/serverless": "^1.0.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "better-auth": "^1.3.27",
    "better-auth-harmony": "^1.2.5",
    "bullmq": "^5.61.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.10",
    "ioredis": "^5.8.1",
    "postgres": "^3.4.7",
    "resend": "^6.1.2",
    "uuid": "^11.1.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@myakiba/eslint-config": "workspace:*",
    "@types/bun": "^1.2.23",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.5",
    "tsdown": "^0.12.9",
    "typescript": "^5.9.3"
  }
