{
  "name": "myakiba",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "typescript": "^5.9.3",
      "zod": "^4.3.6",
      "@types/bun": "^1.3.9",
      "drizzle-orm": "^0.45.1",
      "drizzle-zod": "^0.8.3",
      "ioredis": "^5.9.3",
      "postgres": "^3.4.8",
      "bullmq": "^5.68.0",
      "@paralleldrive/cuid2": "^3.3.0",
      "dotenv": "^17.2.4",
      "uuid": "^13.0.0",
      "better-auth": "^1.4.18",
      "elysia": "^1.4.25",
      "@eslint/js": "^10.0.1",
      "eslint": "^10.0.0",
      "typescript-eslint": "^8.55.0",
      "date-fns": "^4.1.0"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "lint": "turbo lint",
    "stop": "turbo -F @myakiba/db db:stop && turbo -F @myakiba/redis redis:stop",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "dev:worker": "turbo -F worker dev",
    "db:push": "turbo -F @myakiba/db db:push",
    "db:studio": "turbo -F @myakiba/db db:studio",
    "db:generate": "turbo -F @myakiba/db db:generate",
    "db:migrate": "turbo -F @myakiba/db db:migrate",
    "db:start": "turbo -F @myakiba/db db:start",
    "db:watch": "turbo -F @myakiba/db db:watch",
    "db:stop": "turbo -F @myakiba/db db:stop",
    "db:down": "turbo -F @myakiba/db db:down",
    "redis:start": "turbo -F @myakiba/redis start",
    "redis:stop": "turbo -F @myakiba/redis stop",
    "redis:down": "turbo -F @myakiba/redis down",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "oxfmt": "^0.32.0",
